configuration {
	font:							"Victor Medium Nerd Font 30";
    show-icons:                     true;
	icon-theme: 					"Papirus-Dark";
    display-drun: 					"î§Œ";
    drun-display-format:            "{name}";
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

@import "colors.rasi"

window {
    transparency:                   "real";
    background-color:               @bg;
    text-color:                     @fg;
	border:							3px 3px 3px 3px;
	border-color:					@ac;
    border-radius:                  0px;
	width:							800px;
    location:                       center;
    x-offset:                       0;
    y-offset:                       0;
}

prompt {
    enabled: 						true;
	padding: 						10px;
	background-color: 				@bga;
	text-color: 					@sl;
	font:							"feather 26";
}

entry {
    background-color:               @al;
    text-color:                     @sl;
    placeholder-color:              @gr;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "Search...";
	padding: 						0px 0px 0px 5px;
    blink:                          true;
}

inputbar {
	children: 						[ prompt, entry ];
    background-color:               @bga;
    text-color:                     @sl;
    expand:                         false;
	border:							0px 0px 3px 0px;
    border-radius:                  0px;
	border-color:					@se;
    margin:                         0px;
    padding:                        10px;
}

listview {
    background-color:               @bg;
    padding:                        0px;
    columns:                        1;
    lines:                          15;
    spacing:                        2px;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @al;
	border:							0px;
    border-radius:                  0px;
	border-color:					@ac;
    children:                       [ inputbar, listview ];
    spacing:                       	5px;
    padding:                        5px;
}

element {
    background-color:               @al;
    text-color:                     @fg;
    orientation:                    horizontal;
    border-radius:                  0px;
	padding: 						6px;
}

element-icon {
    spacing:                       	5px;
    padding:                        5px;
    background-color:               @bga;
    size:                           36px;
    border:                         0px;
}

element-text {
    expand:                         true;
    horizontal-align:               0;
    vertical-align:                 0.5;
    margin:                         0px 2.5px 0px 2.5px;
    text-color:                     @fg;
    background-color:               @bg;
}

element selected {
    text-color:                     @bg;
	border:							0px 0px 0px 0px;
    border-radius:                  5px;
    border-color:                  	@ac;
}

element-text selected {
    text-color:                     @ac;
}
